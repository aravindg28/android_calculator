<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn7"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="304dp"
        android:background="@drawable/testing2"
        android:text="7"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn7"
        android:layout_alignParentStart="true"
        android:layout_marginStart="110dp"
        android:layout_marginBottom="-2dp"
        android:background="@drawable/testing2"
        android:text="8"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn7"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="128dp"
        android:background="@drawable/testing2"
        android:text="9"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn7"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-1dp"
        android:layout_marginBottom="193dp"
        android:background="@drawable/testing2"
        android:text="4"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn8"
        android:layout_alignBottom="@+id/btn4"
        android:layout_marginStart="-1dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/testing2"
        android:text="5"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn9"
        android:layout_alignTop="@+id/btn4"
        android:layout_marginStart="0dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/testing2"
        android:text="6"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn7"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-1dp"
        android:layout_marginBottom="137dp"
        android:background="@drawable/testing2"
        android:text="1"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn8"
        android:layout_alignBottom="@+id/btn1"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="-1dp"
        android:background="@drawable/testing2"
        android:text="2"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn9"
        android:layout_alignBottom="@+id/btn1"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="-1dp"
        android:background="@drawable/testing2"
        android:text="3"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn8"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="81dp"
        android:background="@drawable/testing2"
        android:text="0"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btndot"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn0"
        android:layout_alignEnd="@+id/btn7"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/testing"
        android:text="."
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnequalto"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn9"
        android:layout_alignBottom="@+id/btn0"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-2dp"
        android:background="@drawable/testing"
        android:text="="
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn8"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/testing"
        android:text="+"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnsub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn2"
        android:layout_alignStart="@+id/btnadd"
        android:layout_marginStart="-1dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/testing"
        android:text="-"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnmul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnequalto"
        android:layout_alignEnd="@+id/btnadd"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/testing"
        android:text="*"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btndiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnadd"
        android:layout_alignTop="@+id/btndot"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/testing"
        android:text="/"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnmc"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn7"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="246dp"
        android:text="MC"
        android:textSize="24sp"
        android:background="@drawable/testing" />

    <Button
        android:id="@+id/btnmadd"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn2"
        android:layout_alignTop="@+id/btnmc"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/testing"
        android:text="M+"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnmsub"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn9"
        android:layout_alignTop="@+id/btnmadd"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/testing"
        android:text="M-"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnmread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnadd"
        android:layout_alignBottom="@+id/btnmc"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="-3dp"
        android:background="@drawable/testing"
        android:text="MR"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textDisplay"
        android:layout_width="366dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="33dp"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textResult"
        android:layout_width="375dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/textDisplay"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="118dp"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnequalto"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-2dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/testing3"
        android:text="Del"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnclear"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/testing3"
        android:text="Clear"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn9"
        android:layout_alignTop="@+id/btnDel"
        android:layout_marginStart="97dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/testing"
        android:text="+/-"
        android:textSize="24sp" />

</RelativeLayout>